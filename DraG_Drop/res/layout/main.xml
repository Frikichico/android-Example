<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="2"
        android:columnWidth="300dp"
        android:orientation="vertical"
        android:stretchMode="columnWidth" >

        <LinearLayout
            android:id="@+id/topleft"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/shape" >

            <ImageView
                android:id="@+id/myimage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:src="@drawable/india" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/topright"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@drawable/shape" >

            <ImageView
                android:id="@+id/myimage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:src="@drawable/italy" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/centerleft1"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/shape" >

            <ImageView
                android:id="@+id/myimage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:src="@drawable/canada" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/centerright1"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@drawable/shape" >

            <ImageView
                android:id="@+id/myimage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:src="@drawable/germany" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/centerleft2"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@drawable/shape" >

            <ImageView
                android:id="@+id/myimage5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:src="@drawable/turkey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/centerright2"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@drawable/shape" >

            <ImageView
                android:id="@+id/myimage6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:src="@drawable/spain" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomleft"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_row="3"
            android:background="@drawable/shape" >

            <ImageView
                android:id="@+id/myimage7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:src="@drawable/france" />
        </LinearLayout>
    </GridLayout>

</ScrollView>